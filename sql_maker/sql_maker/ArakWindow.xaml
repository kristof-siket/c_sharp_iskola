        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sql_maker"
        mc:Ignorable="d"
        Closing="arak_closing_handler"
        Title="Egységár bevitele" Height="248.936" Width="277.66">
    <Grid>
        <Label x:Name="label" Content="Termék adatai:" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Gyártó:" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Modell:" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top"/>
