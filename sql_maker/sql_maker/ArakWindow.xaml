        <Label x:Name="label4" Content="Ár:" HorizontalAlignment="Left" Margin="10,135,0,0" VerticalAlignment="Top"/>
        <ComboBox ItemsSource="{Binding OsszesKategoria}" x:Name="cmbKateg" HorizontalAlignment="Left" Margin="78,108,0,0" VerticalAlignment="Top" Width="153"/>
        <TextBox x:Name="txtAr" HorizontalAlignment="Left" Height="23" Margin="65,137,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtModell" HorizontalAlignment="Left" Height="23" Margin="65,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtGyarto" HorizontalAlignment="Left" Height="23" Margin="65,44,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Hozzáadás" HorizontalAlignment="Left" Margin="92,177,0,0" VerticalAlignment="Top" Width="93" Height="32" Click="button_Click"/>
    </Grid>
</Window>
